<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="8dp"
            app:elevation="0dp">

            <LinearLayout
                android:id="@+id/header_parent_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_9sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="@string/name_c"
                        android:textColor="#858585"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="solitaire Lead 2"
                        android:layout_marginStart="4dp"
                        android:textColor="#1A1A1A"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:gravity="center_vertical"
                        android:text="12 Min Ago"
                        android:textColor="#858585"
                        android:textSize="@dimen/_8sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="@string/project_c"
                        android:textColor="#858585"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/projectName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:layout_marginStart="4dp"
                        android:text="@string/customer_facing_team_test_project"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="@string/configuration"
                        android:textColor="#858585"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/configuration_opp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:layout_marginStart="4dp"
                        android:text="@string/customer_facing_team_test_project"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="@string/status_c"
                        android:textColor="#858585"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/status_opp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:layout_marginStart="4dp"
                        android:text="@string/customer_facing_team_test_project"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="@string/mobile_no_c"
                        android:textColor="#858585"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/mobile_no_opp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:layout_marginStart="4dp"
                        android:text="@string/customer_facing_team_test_project"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:text="@string/email_c"
                        android:textColor="#858585"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/email_opp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/myriad_pro_regular"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:layout_marginStart="4dp"
                        android:text="@string/customer_facing_team_test_project"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <include
                    android:id="@+id/include"
                    layout="@layout/_layout_opportunity_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".7dp"
                android:layout_gravity="bottom"
                android:background="#DEDEDE" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>