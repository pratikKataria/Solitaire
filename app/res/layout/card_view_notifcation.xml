<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/mtrl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/header_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:textColor="#858585"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/opportunity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:text="solitaire Lead 2"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/project_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#858585"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

        ==
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:singleLine="false"
                    android:textColor="#FD9D47"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/background_color"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

