<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-127dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_12sdp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visited At" />

    <EditText
        android:id="@+id/visited_at"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Visited At" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethnicity" />

    <EditText
        android:id="@+id/ethnicity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Ethnicity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budget" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Budget" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zone" />

    <EditText
        android:id="@+id/zone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Zone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Talked about Competition" />

    <RadioGroup
        android:id="@+id/talkedAboutCompetitionRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/yesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/noRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No" />
    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Rating" />

    <EditText
        android:id="@+id/visit_rating"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Visit Rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SM Feedback" />

    <EditText
        android:id="@+id/sm_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="SM Feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place of Work" />

    <EditText
        android:id="@+id/place_of_work"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Place of Work" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designation" />

    <EditText
        android:id="@+id/designation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Designation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Location Pincode" />

    <EditText
        android:id="@+id/work_location_pincode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Work Location Pincode" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desired Possession" />
    <EditText
        android:id="@+id/desired_possession"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Desired Possession" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anniversary Date" />
    <EditText
        android:id="@+id/anniversary_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Anniversary Date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Action Date" />
    <EditText
        android:id="@+id/next_action_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:background="@drawable/box_inputfield"
        android:textColorHint="#AFAFAF"
        android:hint="Next Action Date" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/viewDetailsBtn"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginHorizontal="@dimen/_80sdp"
        android:layout_height="30dp"
        android:backgroundTint="@color/black"
        android:elevation="0dp"
        android:fontFamily="@font/myriad_pro_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="8dp"/>

</LinearLayout>

</ScrollView>