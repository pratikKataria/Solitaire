<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <TableLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:stretchColumns="1">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Fields"
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Values"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Maha RERA No. "
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rera_no"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="RERA Expiry Date "
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rera_exp_date"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Cp Type "
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cp_type"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Cp Sub-Type"
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sp_subType"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Zone"
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/zone"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Activities Planned"
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/activities_planned"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Location of the CP's Office"
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/office_location"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Expertise"
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/expertise"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Files Present"
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/fiels"
                    android:text="file name"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <EditText
                android:id="@+id/comment_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:background="@drawable/box_inputfield"
                android:textColorHint="#AFAFAF"
                android:hint="  Comments*" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/approveBtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:elevation="0dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Approve"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"/>

                <View
                    android:layout_width="16dp"
                    android:layout_height="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rejectBtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:elevation="0dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</layout>