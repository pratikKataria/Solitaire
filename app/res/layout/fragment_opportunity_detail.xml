            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:layout_marginHorizontal="12dp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ActivityOpportunityDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="130dp"
                        android:text="Expiry date"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/exp_date"
                        style="@style/ActivityOpportunityDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="@id/name_label"
                        app:layout_constraintTop_toBottomOf="@id/name_label"
                        tools:text="Name" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:src="@drawable/ic_edit"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10sp"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/last_call_update_status_label"
                        style="@style/ActivityOpportunityDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="130dp"
                        android:text="Last call update status "
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/last_call_status"
                        style="@style/ActivityOpportunityDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="@id/name_label"
                        app:layout_constraintTop_toBottomOf="@id/name_label"
                        tools:text="Name" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10sp"
                    android:background="@color/line_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:paddingTop="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/ActivityOpportunityDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="130dp"
                        android:text="Last call description"
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/last_call_description"
                        style="@style/ActivityOpportunityDetailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:layout_constraintStart_toStartOf="@id/name_label"
                        app:layout_constraintTop_toBottomOf="@id/name_label"
                        tools:text="Name" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/line_color" />

            <include
                android:id="@+id/include"
                layout="@layout/_layout_opportunity_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/line_color" />
        </LinearLayout>

    </LinearLayout>
</layout>