<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-127dp">
        <TableLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:stretchColumns="1">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Fields"
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Values"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Parent Campaign Name "
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/parent_campaign_name_c"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Child Campaign Name "
                    android:padding="5dp"
                    android:layout_width="@dimen/_80sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/child_campaign_name_c"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Project Name "
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/project_name_c"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Total Budget For Parent Campaign"
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/total_budget_for_parent_campaign"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Budget Cost Approved in Heirachy "
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/budget_cost_in_heirachy"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Budget Cost in Child Campaign "
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/budget_cost_in_child_campaign"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Start Date"
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/start_date"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="End Date"
                    android:padding="5dp"
                    android:layout_width="@dimen/_60sdp"
                    android:textColor="#000000"
                    android:background="#EAEAEA"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/end_date"
                    android:text="Current Value"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/approveBtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:elevation="0dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Approve"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"/>

                <View
                    android:layout_width="16dp"
                    android:layout_height="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/rejectBtn"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:elevation="0dp"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
        </TableLayout>
    </ScrollView>
</layout>