            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_padding"
                android:paddingBottom="@dimen/layout_padding"
                android:visibility="gone">

                <TextView
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:text="Subject: "
                    android:textColor="#848484" />

                <TextView
                    android:id="@+id/list_item_specific_task_subject"
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/activity_date_layout_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_padding"
                android:paddingBottom="@dimen/layout_padding">

                <TextView
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:minWidth="150dp"
                    android:text="Activity date: "
                    android:textColor="#848484"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/activity_date"
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_padding"
                android:paddingBottom="@dimen/layout_padding">

                <TextView
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:text="Created date: "
                    android:textColor="#848484"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/created_date"
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/layout_padding"
                android:paddingBottom="@dimen/layout_padding">

                <TextView
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="150dp"
                    android:text="Type of Equiry:  "
                    android:textColor="#848484"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/type_equiry"
                    style="@style/SpecificTaskDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mark_as_complete"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:backgroundTint="#070707"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:includeFontPadding="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Mark as complete"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    app:elevation="0dp" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="2dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/opportunityDetail"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:backgroundTint="#F1F1F1"
                    android:fontFamily="@font/myriad_pro_regular"
                    android:includeFontPadding="false"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Opportunity Details"
                    android:textColor="#040404"
                    android:textSize="10sp"
                    app:cornerRadius="6dp"
                    app:elevation="0dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="#989898" />

        </LinearLayout>


    </RelativeLayout>
</layout>