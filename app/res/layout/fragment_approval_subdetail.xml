    <TableRow
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="GST"
        android:padding="5dp"
        android:layout_width="@dimen/_60sdp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#EAEAEA"
