<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exFiveDayLayout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginEnd="2dp"
    android:layout_marginTop="2dp"
    android:layout_height="120dp"
    android:orientation="vertical">


        <TextView
            android:id="@+id/exFiveDayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            tools:text="24"
            android:gravity="center"
            android:layout_margin="14dp"
            android:layout_gravity="top"
            android:textSize="12sp"
            android:fontFamily="@font/myriad_pro_regular"/>

        <TextView
            android:id="@+id/label_sv"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:textSize="10sp"
            style="@style/TitleText"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#7291F8" />

        <TextView
            android:id="@+id/label_fu"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            style="@style/TitleText"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#36CB93" />

        <TextView
            android:id="@+id/label_f2f"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            style="@style/TitleText"
            android:textSize="10sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_marginTop="8dp"
            android:background="#FF8C68" />

</LinearLayout>


