<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:id="@+id/approval_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/approval_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="@dimen/_3sdp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#F5F5F5"
        app:cardElevation="0dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/approval_header_parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="@dimen/_8sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Opportunity Name:  "
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:textColor="#858585"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/approval_opportunity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:text="Abhinav Agarwal"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/approval_opportunity_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#858585"
                    android:textSize="@dimen/_8sdp" />
            </LinearLayout>

            ==
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Owner:  "
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:textColor="#858585"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/approval_owner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="Opportunity Name"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Project Name:  "
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:textColor="#858585"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/approval_project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="MTM Phase 1"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tower Name:  "
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:textColor="#858585"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/approval_tower_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="MTM Phase 1"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unit No:  "
                    android:fontFamily="@font/myriad_pro_semi_bold"
                    android:textColor="#858585"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/approval_unit_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="AA-1101"
                    android:textColor="#1A1A1A"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.chip.Chip
                    android:id="@+id/cost_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cost Sheet"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/inter_bold"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/payment_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="Payment Plan"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

